<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Joke2Activity">
    <ImageView
        android:background="@drawable/joke3"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_joke2_zhifu"
            android:text="@string/btn_joke2_zhifu_label"
            android:textSize="18sp"
            android:layout_marginTop="450dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:onClick="btnJinbi"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_joke2_fangqi"
            android:text="@string/btn_joke2_fangqi_label"
            android:textSize="18sp"
            android:layout_marginTop="450dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:onClick="btnJifen"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>